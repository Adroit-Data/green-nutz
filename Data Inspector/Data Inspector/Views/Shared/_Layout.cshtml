<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Data Inspector</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    
</head>
<body class="container-fluid body-content" style="padding-top: 0px">
    <div class="navbar" >
        <div class="container-fluid" style="padding-left: 0px">
            <div class="navbar-header">
                <p class="nav navbar-text">
                    @Html.ActionLink("Data Inspector", "Index", "Home" @*new { area = "" }, new { @class = "navbar-brand" }*@) |
                    @Html.ActionLink("Home", "Index", "Home") |
                    @Html.ActionLink(" My Loads", "Index", "MyLoads") |
                    @Html.ActionLink(" Load ", "Index", "Load") |
                 
                    @if (User.IsInRole("Admin"))
                    {
                         @Html.ActionLink("Clients", "Index", "UsersList")
                    }
                </p>
            </div>
           @Html.Partial("_LoginPartial")
        </div>
        
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ADROIT Data &amp; Insight</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
